{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ConnectionStrings": {
    "ReadConnection": "Data Source=.;Database=GAC-BillingService;Persist Security Info=True;User ID=admin;Password=12345678;MultipleActiveResultSets=True;encrypt=true;TrustServerCertificate=true",
    "ReadWriteConnection": "Data Source=.;Database=GAC-BillingService;Persist Security Info=True;User ID=admin;Password=12345678;MultipleActiveResultSets=True;encrypt=true;TrustServerCertificate=true"
  },

  "Consul": {
    "address": "http://localhost:8500",
    "BaseFolderName": "BillingService",
    "Service": {
      "Name": "Billing-api", // The name of service
      "Id": "Billing-api-1", // A unique ID for the service instance
      "Tags": [ "v1" ]
    }
  },

  "IntegrationService": {
    "Base": "https://localhost:7170/",
    "NPVURl": "api/v1.0/NPV/Fine",
    "TahseelURl":  "api/v1.0/Tahseel/Invoice"
  },

  "redis": {
    "server": "localhost:6379",
    "password": "123456789"
  },
  "rabbitMQ": {
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "QueueName": "InvoiceCreatedQueue",
    "DLQQueueName": "InvoiceCreatedQueue.dlq",
    "ExchangeName": "InvoiceCreatedExchange",
    "MaxRetries": 3
  },
  "WorkerSettings": {
    "RunEveryInSeconds": 30,
    "BulkInvoicesCount": 100,
    "InvoiceCreatedQueueName": "InvoiceCreatedQueue"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day",
          "FileSizeLimitBytes": 500000,
          "RollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "ApplicationName": "BillingSystem.PaymentOrchestrator"
    }
  }

}
