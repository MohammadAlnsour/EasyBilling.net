  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ReadConnection": "Data Source=.;Database=GAC-BillingService;Persist Security Info=True;User ID=admin;Password=12345678;MultipleActiveResultSets=True;encrypt=true;TrustServerCertificate=true",
    "ReadWriteConnection": "Data Source=.;Database=GAC-BillingService;Persist Security Info=True;User ID=admin;Password=12345678;MultipleActiveResultSets=True;encrypt=true;TrustServerCertificate=true"
  },

  "IdentityServer": {
    "Authority": "https://localhost:5001/",
    "ClientId": "BillingAPI",
    "ClientSecret": "49C1A7E1-0C79-4A89-A3D6-A37998FB86B0"
  },
  "Consul": {
    "address": "http://localhost:8500",
    "BaseFolderName": "BillingService",
    "Service": {
      "Name": "Billing-api", // The name of service
      "Id": "Billing-api-1", // A unique ID for the service instance
